                if(ran==user):
                    continue
                if(user not in options1):
                    print("Give Correct Option")
                    sys.exit()


                if ran=="Rock":

                    if user=="Paper":
                        userscore+=1
                    else:
                        computerscore+=1
                if ran=="Paper":

                    if user=="Scissors":
                        userscore+=1
                    else:
                        computerscore+=1
                if ran == "Scissors":

                    if user == "Rock":
                        userscore += 1
                    else:
                        computerscore += 1


            except Exception as e:
                print(f"Some error occured in input {e} please retry with perfect input")
